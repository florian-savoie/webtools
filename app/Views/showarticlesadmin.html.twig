{% block contenu %}
    <!-- Content -->
    <!-- Users List Table -->
    {% include "./layout/aside.html.twig" %}

    <div class="row col-12 " style="background: radial-gradient(circle, rgb(251,252,253) 94%, rgba(251,251,251,1) 100%);
">


        <div class="col-1"></div>
        <div class="col-11 mt-5">
            <div class="d-flex justify-content-end align-items-center my-3">
                <label for="search-box" class=" col-form-label">Rechercher : </label>
                <div class="col-2">
                    <input class="form-control" type="text" placeholder="Rechercher un article" id="search-box">
                </div>
            </div>
            <div class="row">
                <!-- Finance App -->
                {% for article in articles %}
                    <div class="col-lg-3 col-xl-2 mb-3 article" style="height: 500px;">
                        <div class="card h-100 ">

                            <img class="card-img-top" style="height: 190px ;min-height: 190px ;position: relative"
                                 src="{{ article.image }}" alt="iPhone-bg" />
                            <div style="position: absolute; right: 0px;top: 0px; background-color: #e5e2e2;cursor: pointer">
                                <span
                                        data-bs-toggle="modal"
                                        data-bs-target="#modaleditss{{ article.id }}"    class="mdi mdi-pencil mdi-24px" style="color:green ;"></span>







                                    <!-- Modal modification -->
                                    <div class="modal fade" id="modaleditss{{ article.id }}" tabindex="-1" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h4 class="modal-title" id="modalCenterTitle">Modification de l'article</h4>
                                                    <button
                                                            type="button"
                                                            class="btn-close"
                                                            data-bs-dismiss="modal"
                                                            aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                        <div class="col mb-2">
                                                            <div class="form-floating form-floating-outline mb-2">
                                                                <input
                                                                        type="text"
                                                                        id="dobWithTitle"
                                                                        class="form-control"
                                                                        placeholder="DD / MM / YY" />
                                                                <label for="dobWithTitle">Modifier l'image</label>
                                                            </div>  <div class="form-floating form-floating-outline mb-2">
                                                                <input
                                                                        type="text"
                                                                        id="dobWithTitle"
                                                                        class="form-control"
                                                                        placeholder="source" />
                                                                <label for="dobWithTitle">Editer le lien de la source</label>
                                                            </div>
                                                        </div>
                                                        <div class="col mb-4 mt-2">
                                                            <div class="form-floating form-floating-outline">
                                                                <input
                                                                        type="text"
                                                                        id="nameWithTitle"
                                                                        class="form-control"
                                                                        placeholder="Editer le titre"
                                                                name="title"/>
                                                                <label for="nameWithTitle">Editer le titre</label>
                                                            </div>
                                                        </div>
                                                        <div class="col mb-2">
                                                            <div class="form-floating form-floating-outline">

                                                                <div class="form-floating form-floating-outline mb-4">
                                                                    <textarea class="form-control h-px-100" id="exampleFormControlTextarea1" placeholder="editer le contenu" name="content"></textarea>
                                                                    <label for="exampleFormControlTextarea1">Editer le contenu</label>
                                                                </div>

                                                            </div>
                                                        </div>

                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-label-secondary" data-bs-dismiss="modal">
                                                        Close
                                                    </button>
                                                    <button type="button" class="btn btn-primary">Save changes</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                <!-- Modal modification -->
                                <div class="modal fade" id="modaledelete{{ article.id }}" tabindex="-1" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <form method="post">
                                        <div class="modal-content">

                                            <div class="modal-header">
                                                <h4 class="modal-title" id="modalCenterTitle">Suppresion de l'article</h4>
                                                <button
                                                        type="button"
                                                        class="btn-close"
                                                        data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <input
                                                        type="text"
                                                        class="form-control"
                                                        name="idDeleteArticle"
                                                value="{{ article.id }}" hidden />
                                               <h5> etes vous sur de vouloir supprimer cet article</h5>
                                               <h5> {{ article.title }}</h5>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-label-secondary" data-bs-dismiss="modal">
                                                    Fermer
                                                </button>
                                                <button type="submit" class="btn btn-danger" name="deleteArticle">Confirmer</button>
                                            </div>
                                        </div></form>
                                    </div>
                                </div>







                            <span data-bs-toggle="modal"
                                  data-bs-target="#modaledelete{{ article.id }}"  class="mdi mdi-delete-forever mdi-24px" style="color:red ;"></span>

                        </div>
                            <div class="card-body ">
                                <div class="d-flex align-items-center justify-content-between mb-3"
                                     style="height: 35px">
                                    <div class="d-flex ">
                                        <div class="badge bg-label-success rounded-pill me-3">article</div>
                                        <div class="badge bg-label-danger rounded-pill">React</div>

                                    </div>
                                    <div>
                                        <p class="text-muted fw-semibold mt-2">{{ article.submission_date |date("m/d/Y") }}</p>
                                    </div>


                                </div>
                                <h4 class="mb-1 text-center" style="height: 35px">{{ article.title }}</h4>
                                <p class="text-muted my-2" style=" height: 120px; overflow: hidden ">
                                    {{ article.content }}
                                </p>


                                <!-- Events-->

                                <div class="row mb-1 col-12 ">
                                    <div class="col-12 d-flex flex-column justify-content-center  mb-sm-0 mb-3">
                                        <small class="text-light fw-semibold">Note :{{ article.rating }}</small>
                                        <div class="col-12 d-flex justify-content-between ">
                                            {% set voted = false %}
                                            {% set voteValue = 0 %}

                                            {% for vote in votes %}
                                                {% if vote.article_id == article.id %}
                                                    {% set voted = true %}
                                                    {% set voteValue = vote.vote %}
                                                {% endif %}
                                            {% endfor %}

                                            {% if voted %}
                                                <div class="onset-event-ratings" data-idArticle="{{ article.id }}"
                                                     data-note="{{ voteValue }}"></div>
                                            {% else %}
                                                <div class="onset-event-ratings" data-idArticle="{{ article.id }}"
                                                     data-note="0"></div>
                                            {% endif %}

                                            <div class="d-flex align-items-center justify-content-end">

                                                {% set liked = false %}

                                                {% for like in likes %}
                                                    {% if like.article_id == article.id %}          {% set liked = true %}
                                                    {% endif %}


                                                {% endfor %}   {% if liked %}
                                                    <span onclick="deletefavorite({{ article.id }})"
                                                          id="deletefavorite{{ article.id }}">💛</span>
                                                    <span onclick="addfavorite({{ article.id }})"
                                                          id="addfavorite{{ article.id }}" hidden>🤍 </span>
                                                {% else %}
                                                    <span onclick="deletefavorite({{ article.id }})"
                                                          id="deletefavorite{{ article.id }}" hidden>💛</span>
                                                    <span onclick="addfavorite({{ article.id }})"
                                                          id="addfavorite{{ article.id }}">🤍</span>

                                                {% endif %}


                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- /Events-->

                            </div>
                        </div>
                    </div>
                    <!--/ Finance App -->
                {% endfor %}
            </div>
        </div>
    </div>





{% endblock %}

        {% block js %}



            <!-- endbuild -->



            <!-- endbuild -->

            <!-- Vendors JS -->
            <script src="./assets/vendor/libs/rateyo/rateyo.js"></script>

            <!-- Main JS -->
            <script src="./assets/js/main.js"></script>

            <!-- Page JS -->
            <script src="./assets/js/extended-ui-star-ratings.js"></script>
            <!-- Page JS -->

            <script>
                const searchBox = $('#search-box');
                const articles = $('.article');

                searchBox.on('input', function() {
                    const searchTerm = searchBox.val().toLowerCase();

                    // parcours chaque élément article
                    articles.each(function() {
                        const card = $(this);
                        const contenttitle = card.find('h4').text().toLowerCase();
                        const content = card.find('p').text().toLowerCase();

                        // affiche ou masque la carte en fonction de la recherche
                        if (content.includes(searchTerm) || contenttitle.includes(searchTerm)) {
                            card.show();
                        } else {
                            card.hide();
                        }
                    });
                });





            </script>

            <script src="./assets/js/category/articles/votestar.js"></script>
            <script src="./assets/js/category/articles/addfavorite.js"></script>
            <script src="./assets/js/category/articles/deletefavorite.js"></script>
            <script src="./assets/js/form-basic-inputs.js"></script>

            <script src="./assets/js/ui-modals.js"></script>

        {% endblock %}