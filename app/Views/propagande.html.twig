{% set title = 'client acceuil' %}
{% extends "./layout/layout_nav.html.twig" %}
{% block css %}

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>

    <!-- Flipster CSS -->
    <link rel="stylesheet" href="../assets/vendor/css/pages/app-chat.css"/>

    <link rel="stylesheet" href="../assets/css/chat.css">

    <link rel="stylesheet" href="./assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css"/>
    <link rel="stylesheet" href="./assets/vendor/libs/node-waves/node-waves.css"/>
    <link rel="stylesheet" href="./assets/vendor/libs/typeahead-js/typeahead.css"/>
    <link rel="stylesheet" href="./assets/vendor/libs/datatables-responsive-bs5/responsive.bootstrap5.css"/>
    <link rel="stylesheet" href="./assets/vendor/libs/datatables-buttons-bs5/buttons.bootstrap5.css"/>
    <!-- Flipster Js -->
    <script src="dist/jquery.flipster.min.js"></script>


{% endblock %}
{% block contenu %}
    <!-- Content -->

    <!-- Content wrapper -->
    <div class="content-wrapper" id="vue" hidden="">
        <!-- Content -->
        <div class="container-xxl flex-grow-1 container-p-y">
        <div class="col-xl-12 col-lg-12 col-md-12 mt-5" style="border: #7599f5 3px solid;border-radius: 1rem">
            <div class="card h-100">
                <div class="row h-100">
                    <div class="col-2">
                        <div class="d-flex align-items-center h-100 justify-content-center">
                            <div class="row">
                            <img src="./assets/img/illustrations/add-new-role-illustration.png" class="img-fluid" alt="Image" width="70">
                        </div>                              <div class="row">
                        </div>
                        </div>
                    </div>
                    <div class="col-10">
                        <div class="card-body text-sm-start text-center ps-sm-0">
                            <h4 class="card-header">Systeme de propagande</h4>  <p class="text-dark" style="text-decoration:underline #89b3ec 2px">il vous reste {{ points }} propagande</p>
                            <p>
                                La propagande est la diffusion intentionnelle d'un message sur WEBTOOLS, visible par l'ensemble de
                                la communauté. Chaque article validé vous permet de gagner un point de propagande. </p>
                            <form class="" method="post">

                                <div class="form-floating form-floating-outline">
                                    <input type="text" class="form-control" id="floatingInput"
                                           placeholder="Bienvenu chez WEBTOOLS" name="propagande"
                                           aria-describedby="floatingInputHelp">
                                    <label for="floatingInput">Message</label>
                                    <div id="floatingInputHelp" class="form-text">
                                        100 characteres maximum
                                    </div>
                                </div>
                                <div class="d-flex justify-content-center">
                                <button type="submit" class="btn btn-primary">Publier</button></div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

<!-- Message addflash-->
<div>
            <span id="message" hidden="">{{ messageFlash }}</span>

            <div class="container d-flex justify-content-center mt-5">
                <!-- Timeline -->
                <div id="toast-container" class="toast-top-center">
                    <div class="toast toast-success" aria-live="polite" style="display: block;">
                        <button type="button" class="toast-close-button" role="button">×</button>
                        <div class="toast-title">Votre Propagande a etait ajouté avec succes</div>
                    </div>
                </div>

            </div>
            <div id="toastError">
            <div id="toast-container" class="toast-top-center">
                <div class="toast toast-error" aria-live="assertive" style="display: block; ">
                    <div class="toast-message">Votre propagande n'a pas pu etre ajouté</div>
                </div>
            </div>
        </div>
        </div>
            <!-- Message addflash-->



            <div class="content-backdrop fade"></div>
        </div>
        <!-- Content wrapper -->
        / Layout page -->

        <!-- Overlay -->
        <div class="layout-overlay layout-menu-toggle"></div>

        <!-- Drag Target Area To SlideIn Menu On Small Screens -->
        <div class="drag-target"></div>
    </div>
    <!-- / Content -->




{% endblock %}

    {% block js %}


        <script src="./assets/vendor/assets/js/form-basic-inputs.js"></script>

        <script>            // Récupère l'élément div
            var toast = document.getElementById('toast-container');
            var toasterror = document.getElementById('toastError');
            var message = document.getElementById('message').textContent;
            toast.style.display = 'none';
            toasterror.style.display = 'none';

            function succesSendMessage() {
                toast.style.display = 'block';
                setTimeout(function () {
                    toast.style.display = 'none';
                }, 3000);
            }

            function succesSendMessageerror() {
                toasterror.style.display = 'block';
                setTimeout(function () {
                    toasterror.style.display = 'none';
                }, 3000);
            }

            if (message == "success") {
                succesSendMessage();
            } else if (message == "error") {
                succesSendMessageerror();
            }

            window.onload = function () {
                var vue = document.getElementById('vue');
                vue.hidden = false;
            };</script>

    {% endblock %}
