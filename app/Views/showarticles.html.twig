        if (response.length > 0) {
          // Afficher la div de la sous-cat√©gorie
          divSousCat.hidden = false;

          // Ajouter les options de la sous-cat√©gorie
          response.forEach(function (sousCat) {
            selectSousCategory.innerHTML += `<option value="${sousCat.id}">${sousCat.name}</option>`;
          });
        } else {
          // Cacher la div de la sous-cat√©gorie si aucune sous-cat√©gorie disponible
