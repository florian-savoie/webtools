function compressAndAddImage(img, formData, callback) { // Cr√©er un canvas qui permet de dessiner l'image r√©duite
const canvas = document.createElement("canvas");
// D√©finir la largeur et la hauteur maximales de l'image
let maxWidth = 640;
let maxHeight = 400;

// R√©cup√©rer les dimensions de l'image
let width = img.width;
let height = img.height;

// Si la largeur de l'image est sup√©rieure √† la largeur maximale
if (width > maxWidth) { // Ajuster la hauteur de l'image de fa√ßon proportionnelle
height *= maxWidth / width;
// Mettre la largeur de l'image √† la largeur maximale
width = maxWidth;
}

// Si la hauteur de l'image est sup√©rieure √† la hauteur maximale
if (height > maxHeight) { // Ajuster la largeur de l'image de fa√ßon proportionnelle
width *= maxHeight / height;
// Mettre la hauteur de l'image √† la hauteur maximale
height = maxHeight;
}

// Fixer la largeur et la hauteur du canvas
canvas.width = width;
canvas.height = height;

// Dessiner l'image sur le canvas avec les dimensions r√©duites
const ctx = canvas.getContext("2d");
ctx.drawImage(img, 0, 0, width, height);

// Convertir le canvas en donn√©es d'URL pour obtenir l'image compress√©e
const compressedImageData = canvas.toDataURL("image/jpeg", 0.9);

// Ajouter les donn√©es de l'image compress√©e √† FormData
formData.append("image", compressedImageData);

// Appeler la fonction de rappel
callback();
}

