                                        </div>
                                    </div>
                                </div>
                            </div>


                            <!-- Modal modification -->
                            <div class="modal fade" id="modaledeletess{{ article.id }}" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <form method="post">
                                        <div class="modal-content">

                                            <div class="modal-header">
                                                <h4 class="modal-title" id="modalCenterTitle">Suppresion de l'article</h4>
                                                <button
                                                        type="button"
                                                        class="btn-close"
                                                        data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <input
                                                        type="text"
                                                        class="form-control"
                                                        name="idDeleteArticle"
                                                        value="{{ article.id }}" hidden />
                                                <h5> etes vous sur de vouloir supprimer cet article</h5>
                                                <h5> {{ article.title }}</h5>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-label-secondary" data-bs-dismiss="modal">
                                                    Fermer
                                                </button>
                                                <button type="submit" class="btn btn-danger" name="deleteArticle">Confirmer</button>
                                            </div>
                                        </div></form>
                                </div>
                            </div>







                            <span data-bs-toggle="modal"
                                  data-bs-target="#modaledeletess{{ article.id }}"  class="mdi mdi-delete-forever mdi-24px" style="color:red ;"></span>

                        </div>
                        <div class="card-body ">
                            <div class="d-flex align-items-center justify-content-between mb-3" style="height: 35px">
                                <div class="d-flex ">
                                    <div class="badge rounded-pill me-3" style="background-color: {{ article.category_color }};font-size: 12px">{{ article.category_name }}</div>
                                    <div class="badge  rounded-pill" style="background-color: {{ article.category_color }};font-size: 12px">{{ article.subcategories_name }}</div>

                                </div>
                                <div>
                                    <p class="text-muted fw-semibold mt-2">{{ article.submission_date |date("m/d/Y") }}</p>
                                </div>


                            </div>
                            <h4 class="mb-1 text-center" style="height: 40px;overflow: hidden;font-size: 18px">{{ article.title }}</h4>
                            <p class="text-muted my-2" style=" height: 115px; overflow: hidden ;font-size: 14px">
                                {{ article.content }}
                            </p>


                            <!-- Events-->

                            <div class="row mb-1 col-12 ">
                                <div class="col-12 d-flex flex-column justify-content-center  mb-sm-0 mb-3">
                                    <div>
                                        <label class="switch switch-primary">
                                            <input type="checkbox" class="switch-input hiddenproject"
