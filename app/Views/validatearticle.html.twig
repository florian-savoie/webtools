{% block contenu %}
    <!-- Content -->
    <!-- Users List Table -->
    <div class="container mt-5">
        <div class="row mt-5"></div>
        <div class="row mt-5">
            <!-- Finance App -->
            {% for article in articles %}
                <div class="col-lg-4 col-xl-3 mb-3" style="height: 500px;">
                    <div class="card h-100">
                        <img class="card-img-top" style="height: 190px ;min-height: 190px " src="{{ article.image }}"
                             alt="iPhone-bg"/>
                        <div class="card-body ">
                            <div class="d-flex align-items-center justify-content-between mb-3" style="height: 35px">
                                <div class="d-flex ">
                                    <div class="badge bg-label-success rounded-pill me-3">article</div>
                                    <div class="badge bg-label-danger rounded-pill">React</div>

                                </div>
                                <div>
                                    <p class="text-muted fw-semibold mt-2">{{ article.submission_date |date("m/d/Y") }}</p>
                                </div>


                            </div>
                            <h4 class="mb-1 text-center" style="height: 35px">{{ article.title }}</h4>
                            <p class="text-muted my-2" style=" height: 120px; overflow: hidden ">
                                {{ article.content }}
                            </p>


                            <!-- Events-->

                            <div class="row mb-1 col-12 ">
                                <div class="col-12 d-flex flex-column justify-content-center  mb-sm-0 mb-3">
                                    <div>
                                        <label class="switch switch-primary">
                                            <input type="checkbox" class="switch-input hiddenproject"
                                                   id="checkbox{{ article.id }}"
                                                   data-valeur="{{ article.id }}"
                                                   data-etat="{{ article.is_approved }}" {% if article.is_approved == '1' %} checked {% endif %}/>
                                            <span class="switch-toggle-slider" onclick="hiddenarticle({{ article.id }})">  </span>
                                        </label>
                                    </div>
                                </div>
                                <div class=" d-flex justify-content-end mx-3">
                                    {% if article.is_approved == '1' %}  <p id="status{{ article.id }}"
                                                                                style="color:green;">"Actuellement
                                        publier"</p> {% else %}<p id="status{{ article.id }}" style="color:red;">
                                            "Actuellement cach√©"</p> {% endif %}

                                </div>
                            </div>

                            <!-- /Events-->

                        </div>
                    </div>
                </div>
                <!--/ Finance App -->
            {% endfor %}

        </div>
    </div>





